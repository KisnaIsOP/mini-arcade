# Mini Arcade Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project dashboard -> Settings -> API
SUPABASE_URL=<SUPABASE_URL>
SUPABASE_KEY=<SUPABASE_KEY>

# Mode Configuration
# Set to false for production with real multiplayer
IS_DEMO=false

# Authentication Configuration (optional)
# Set to true to use Supabase Auth instead of local auth
USE_SUPABASE_AUTH=false

# For Render.com deployment, set these as environment variables in dashboard:
# SUPABASE_URL = <SUPABASE_URL>
# SUPABASE_KEY = <SUPABASE_KEY>
# IS_DEMO = false
# USE_SUPABASE_AUTH = false

# For local development, you can uncomment and set actual values:
# SUPABASE_URL = https://your-project-id.supabase.co
# SUPABASE_KEY = eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# IS_DEMO = false
# USE_SUPABASE_AUTH = false

# Slither.io Multiplayer Server
SLITHER_SERVER_URL=http://localhost:3000